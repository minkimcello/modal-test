{
  "name": "mocha-testing",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-scripts": "3.4.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "jest": "react-scripts test --verbose ./src/jest/*",
    "cypr": "yarn cypress run --spec 'cypress/integration/*'",
    "cypo": "yarn cypress open",
    "moch": "mocha --require @babel/register --require ignore-styles --require ./src/mocha/helper.js 'src/mocha/*.spec.js'"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "cypress": "^4.3.0",
    "cypress-dark": "^1.7.14",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "react-test-renderer": "^16.13.1",
    "@babel/register": "^7.8.6",
    "chai": "^4.2.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "ignore-styles": "^5.0.1",
    "jsdom": "^16.2.1",
    "mocha": "^7.1.0"
  }
}
